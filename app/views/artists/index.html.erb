

<%= render '/layouts/navbar' %> 
<p id="notice"><%= notice %></p>
<h1 class="ui header">Artists</h1>
  <div id='artist'>
    <%= link_to 'Back to Billboard', billboards_path %><br/><br/>
    <%= link_to 'New Artist', new_artist_path %>
  </div>
<div class="ui divider"></div>

<div class="ui grid">
<% @artists.each do |artist| %>
    <div class="sixteen wide mobile eight wide tablet four wide computer column">
        <div class="ui card">
            <div class="image">
                <img 
                src="<%= artist.image_src %>" alt="<%artist.name%>" />
            </div>
            <div class="content">
                <%=link_to artist.name, artist, class: "header" %>
            </div>
            <div class ="extra content">
                <div class="ui two buttons">
                  <div class="ui basic green button">
                      <%= link_to "Edit", edit_artist_path(artist) %>
                  </div>
                  <div class="ui basic red button">
                      <%= link_to "Destroy", artist, method: :delete, 
                                  data: { confirm: "Are you sure?" } %>
                  </div>
                </div>
              </div>
      </div>
    </div>
  <% end %>
  </div>
