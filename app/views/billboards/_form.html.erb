<h1><%= @billboard.id ? 'Edit Billboard' : 'Create Billboard' %></h1>
<hr />
<%= form_for @billboard do |f| %>
  <% if @billboard.errors.any? %>
    <div id="notice" class="error">
      <h2><%= pluralize(@billboard.errors.count, "error") %> 
          prohibited this @billboard from being saved:</h2>
      <ul>
        <% @billboard.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "ui button primary" %>
    <%= link_to 'Back', billboards_path, class: "ui button primary" %>
  </div>
<% end %>
</div>